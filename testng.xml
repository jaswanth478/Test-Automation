<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" parallel="methods" thread-count="3">
    <listeners>
        <listener class-name="com.automation.api.listeners.TestListener"/>
    </listeners>
    
    <test name="CRUD Tests">
        <classes>
            <class name="com.automation.api.tests.CreateTests"/>
            <class name="com.automation.api.tests.ReadTests"/>
            <class name="com.automation.api.tests.UpdateTests"/>
            <class name="com.automation.api.tests.DeleteTests"/>
            <class name="com.automation.api.tests.ParameterizedTests"/>
            <class name="com.automation.api.tests.IntegrationTests"/>
        </classes>
    </test>
    
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.api.tests.CreateTests"/>
            <class name="com.automation.api.tests.ReadTests"/>
            <class name="com.automation.api.tests.UpdateTests"/>
            <class name="com.automation.api.tests.DeleteTests"/>
        </classes>
    </test>
</suite>

